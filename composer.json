{
    "name": "scrutinizer/scrutinizer",
    "description": "A library for gathering code analysis results",
    "license": "Apache2",

    "repositories": [
        {"type": "git", "url": "git://github.com/torinaki/pdepend"},
        {"type": "git", "url": "git://github.com/scrutinizer-ci/phpcpd"},
        {"type": "git", "url": "git://github.com/scrutinizer-ci/finder-facade"}
    ],

    "bin": ["bin/scrutinizer"],

    "require": {
        "php": ">=5.4",
        "scrutinizer/utils": "dev-master",
        "symfony/config": "~2.0",
        "symfony/console": "~2.0",
        "symfony/process": "~2.1@dev",
        "symfony/finder": "~2.1",
        "symfony/yaml": "~2.0",
        "symfony/filesystem": "~2.0",
        "symfony/event-dispatcher": "~2.0",
        "monolog/monolog": "~1.2.0",
        "psr/log": "1.0.0",
        "phpoption/phpoption": "~1.0@dev",
        "jms/serializer": "0.16.0",
        "jms/php-manipulator": "dev-master#c39de50233aed0254928e52ac0ce1df79dcbbcb1",
        "phpcollection/phpcollection": "0.2.*@dev",
        "guzzle/guzzle": "~3.0",
        "nikic/php-parser": "1.0.2"
    },

    "require-dev": {
        "phpmd/phpmd": "~2.1",
        "pdepend/pdepend": "2.0.0",
        "squizlabs/php_codesniffer": "dev-master",
        "fabpot/php-cs-fixer": "~1.0",
        "sebastian/phpcpd": "dev-master",
        "phploc/phploc": "2.0.6"
    },

    "autoload": {
        "psr-0": {
            "Scrutinizer": "src/" 
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-Halstead-complexity-metric": "2.0.0"
        }
    }
}
